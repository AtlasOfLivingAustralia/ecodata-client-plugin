{
  "modelName": "Validation example",
  "dataModel": [
    {
      "dataType": "number",
      "name": "item1",
      "validate" : "min[0]",
      "behaviour": [
        {
          "condition": "item2 == '1'",
          "type": "conditional_validation",
          "value": {
            "validate":"required,custom[integer],min[1]",
            "message":"test message"
          }
        }
      ]
    },
    {
      "validate": [{
        "rule":"max",
        "param": {
            "type": "computed",
            "expression": "item1*3"
          }
      }],
      "dataType": "number",
      "name": "item2"
    }
  ],
  "viewModel": [
    {
      "type": "row",
      "items": [
        {
          "type": "col",
          "items": [
            {
              "preLabel": "Item 1",
              "source": "item1",
              "type": "number"
            },
            {
              "preLabel": "Item 2",
              "source": "item2",
              "type": "text"
            }
          ]
        }
      ]
    }
  ],
  "title": "Validation example"
}